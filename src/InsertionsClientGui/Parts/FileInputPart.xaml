<UserControl x:Class="Microsoft.Net.Insertions.Clients.Parts.FileInputPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.Net.Insertions.Clients.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="tbx"
                 Style="{DynamicResource textbox-input-value}"/>

        <local:CommonButtonPart x:Name="bttnFindFile"
                                Grid.Column="1"/>

        <local:CommonButtonPart x:Name="bttnFindDirectory"
                                Grid.Column="1"
                                Visibility="Hidden"/>
    </Grid>
</UserControl>