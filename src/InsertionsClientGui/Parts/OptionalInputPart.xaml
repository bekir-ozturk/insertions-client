<UserControl x:Class="Microsoft.Net.Insertions.Clients.Parts.OptionalInputPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.Net.Insertions.Clients.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Background="{DynamicResource bg-brush-app-2ndary}">
        <GroupBox.Header>
            <CheckBox Name="chbx"
                      Content="OPTIONAL:  something"
                      FontWeight="Bold"
                      Checked="HandlerToogleEnabledState"
                      Unchecked="HandlerToogleEnabledState"/>
        </GroupBox.Header>
        <local:FileInputPart x:Name="partInput"
                             IsEnabled="False"/>
    </GroupBox>
</UserControl>