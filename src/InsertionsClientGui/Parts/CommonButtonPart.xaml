<UserControl x:Class="Microsoft.Net.Insertions.Clients.Parts.CommonButtonPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.Net.Insertions.Clients.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Name="button"
            Background="Transparent"
            BorderThickness="0">
        <Button.Content>
            <Rectangle Name="rectButtonImage"
                       Height="20"
                       Width="20"/>
        </Button.Content>
        <Button.ToolTip>
            <TextBlock Name="txbkTooltip"
                       VerticalAlignment="Center"
                       Text="tool tip description"
                       Margin="10,0,0,0"/>
        </Button.ToolTip>
    </Button>
</UserControl>